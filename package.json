    "lint-staged": "^15.2.5",
    "ora": "^8.0.1",
    "pnpm": "^8.15.8",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "^3.3.1",
